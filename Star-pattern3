#include <stdio.h>
#include <Stdlib.h>



int main(int argc, char const *argv[])
{
    int n=4;
    for(int i=0; i<n; i++){
        for(int j=0; j<2*n; j++){
            if(n-1-i<=j<=n-1+i){
                printf("*");
            }
            else{
                printf(" ");
            }
            
        }
        printf("\n");
    }
    /* code */
    return 0;
}

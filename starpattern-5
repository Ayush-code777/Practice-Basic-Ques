#include <stdio.h>
#include <stdlib.h>




int main(int argc, char const *argv[])
{
    int n=4;
    
    for(int i=0; i<n; i++){
        int count=0;
        if(i=n-1){
            for(int x=0;x<(n-count);x++){
                printf("*");
            }
        }else{
            
            for( int j=n-1; j>i; j--){
                printf(" ");
                count++;
        }
            for(int k=0; k<(n-count);k++){
                printf("*");
          
        }
       
            printf("\n");

        }


        
        
    }
    /* code */
    return 0;
}
